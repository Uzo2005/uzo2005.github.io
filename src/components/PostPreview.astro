---
import OutlineShadow from "./OutlineShadow.astro";
interface Props {
  title: string;
  pubDate: Date;
  categories: string[] | undefined;
  slug: string;
}

const { title, pubDate, categories, slug } = Astro.props;
import { formatDate } from "../consts";
---

<OutlineShadow>
  <div
    class="bg-yellowLight w-full h-28 md:h-32 py-1 md:py-2 grid grid-rows-10 px-2 md:px-4"
  >
    <p
      class="font-medium text-[10px] md:text-base text-black text-opacity-60 row-start-1 row-span-2"
    >
      {formatDate(pubDate)}
    </p>

    <div class="row-start-3 row-span-full flex flex-col justify-between">
      <h2 class="font-semibold text-sm md:text-2xl mb-1 text-black">
        <a href={`/blog/${slug}`} class="h-full w-full">
          {title}
        </a>
      </h2>

      <div class="gap-2 w-full flex justify-end">
        {
          categories?.map((category) => (
            <div class="text-[10px] md:text-sm text-black text-opacity-70 underline">
              {category}
            </div>
          ))
        }
      </div>
    </div>
  </div>
</OutlineShadow>
